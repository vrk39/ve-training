	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.4">
	
	<welcome-file-list>
		<welcome-file>addemployeedetails.jsp</welcome-file>
	</welcome-file-list>
	
	
	
	<servlet>
		<servlet-name>EmployeeServlet</servlet-name>
